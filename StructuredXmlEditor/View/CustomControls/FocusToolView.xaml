<UserControl
	x:Class="StructuredXmlEditor.View.FocusToolView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:data="clr-namespace:StructuredXmlEditor.Data"
	xmlns:v="clr-namespace:StructuredXmlEditor.View">
	<Grid x:Name="Root">

		<v:DataGridView
			Visibility="{Binding Workspace.Current.Data.IsSelectedDataItem, Converter={v:ValueTypeConverter}}"
			HierarchicalItemsSource="{Binding Workspace.Current.Data.SelectedItems}">
			<v:DataGridView.ItemContainerStyle>
				<Style
					TargetType="{x:Type v:DataGridViewItem}"
					BasedOn="{StaticResource {x:Type v:DataGridViewItem}}">
					<Setter
						Property="HorizontalContentAlignment"
						Value="Stretch" />
					<Setter
						Property="IsExpanded"
						Value="{Binding IsExpanded, Mode=TwoWay}" />
				</Style>
			</v:DataGridView.ItemContainerStyle>
		</v:DataGridView>

		<Grid
			Visibility="{Binding DataContext.Workspace.Current.Data.IsSelectedAsciiGrid, Converter={v:ValueTypeConverter}, ElementName=Root, FallbackValue=Collapsed}"
			DataContext="{Binding Workspace.Current.Data.Selected}">

			<Grid.RowDefinitions>
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="*" />
				<RowDefinition
					Height="Auto" />
			</Grid.RowDefinitions>

			<DockPanel
				LastChildFill="False">
				<ToggleButton
					DockPanel.Dock="Left"
					IsChecked="{Binding MagicWandMode, ElementName=AsciiGrid}"
					ToolTip="Magic wand mode"
					Content="I" />
				<ToggleButton
					DockPanel.Dock="Left"
					IsChecked="{Binding Continuous, ElementName=AsciiGrid}"
					IsEnabled="{Binding MagicWandMode, ElementName=AsciiGrid}"
					ToolTip="Whether magic wand mode should select continous blocks or not"
					Content="C" />
			</DockPanel>
			
			<v:AsciiGrid
				x:Name="AsciiGrid"
				Grid.Row="1" />

			<TextBlock
				Grid.Row="2"
				Text="{Binding InfoText, ElementName=AsciiGrid}" />
		</Grid>
	</Grid>
</UserControl>
